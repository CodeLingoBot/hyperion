{
  "name": "hyperion-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "gulp": "^3.9.1",
    "husky": "1.2.0",
    "immutability-helper": "^2.6.2",
    "lint-staged": "^6.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.9.2",
    "prop-types": "^15.6.0",
    "react": "^16.5.0",
    "react-dom": "^16.5.0",
    "react-redux": "^5.0.6",
    "react-redux-toastr": "^7.1.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "2.1.1",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "semantic-ui": "^2.4.0",
    "semantic-ui-react": "^0.82.5",
    "sockette": "^2.0.0",
    "styled-components": "^3.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "watch-css": "cd src/semantic && gulp watch",
    "dev": "npm-run-all -p start watch-css",
    "build-css": "cd src/semantic && gulp build",
    "build-all": "npm-run-all -s build-css build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": ["prettier --single-quote --write", "git add"]
  },
  "devDependencies": {
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0"
  },
  "browserslist": [">0.2%", "not dead", "not ie <= 11", "not op_mini all"]
}
